@model IEnumerable<Admin.Context.Show>

@{
    ViewBag.Title = "Index";
}

<h2>Shows</h2>

<p>
    @Html.ActionLink("Create New", "Add_Show")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShowStartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowEndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.Movie_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Screen.ScreenName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seat.Ticket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theatre.Theatre_Name)
