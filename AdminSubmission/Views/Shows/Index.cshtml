    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShowStartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowEndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Movie_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Screen.ScreenName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seat.Ticket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Theatre.Theatre_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Show_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Show_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Show_ID })
        </td>
    </tr>
